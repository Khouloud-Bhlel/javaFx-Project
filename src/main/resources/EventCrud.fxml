<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" stylesheets="@style/EventCrud.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventCrud">
   <children>
      <!-- Logo Image -->
      <ImageView fitHeight="140.0" fitWidth="173.0" layoutX="10.0" layoutY="10.0" preserveRatio="true">
         <image>
            <Image url="@photos/logo_inverted.png" />
         </image>
      </ImageView>

      <!-- Title for the Form -->
      <Label layoutX="218.0" layoutY="20.0" styleClass="heading" text="EVENT MANAGEMENT FORM">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Switch Account Button -->
      <Button fx:id="switchAccountButton"
              layoutX="600.0"
              layoutY="10.0"
              text="Switch to User"
              onAction="#switchAccount"
              styleClass="button" />

      <!-- Subtitle for the List of Events -->
      <Label layoutX="550.0" layoutY="100.0" styleClass="subheading" text="LIST OF EVENTS">
         <font>
            <Font size="18.0" />
         </font>
      </Label>

      <!-- List of Events -->
      <ListView fx:id="eventLV" layoutX="500.0" layoutY="130.0" prefHeight="300.0" prefWidth="350.0" styleClass="meal-card" />

      <!-- Form Fields -->
      <Label layoutX="50.0" layoutY="120.0" styleClass="subheading" text="NAME:" />
      <TextField fx:id="nameTF" layoutX="150.0" layoutY="110.0" prefHeight="40.0" prefWidth="250.0" styleClass="text-field" />

      <Label layoutX="50.0" layoutY="180.0" styleClass="subheading" text="DESCRIPTION:" />
      <TextArea fx:id="descriptionTF" layoutX="150.0" layoutY="170.0" prefHeight="120.0" prefWidth="250.0" styleClass="text-area" wrapText="true" />

      <Label layoutX="50.0" layoutY="320.0" styleClass="subheading" text="DATE:" />
      <DatePicker fx:id="dateDP" layoutX="150.0" layoutY="310.0" prefHeight="40.0" prefWidth="250.0" styleClass="date-picker" />

      <!-- Buttons -->
      <Button fx:id="addButton" layoutX="50.0" layoutY="400.0" mnemonicParsing="false" onAction="#addevent" styleClass="button" text="ADD" />
      <Button fx:id="modifyButton" layoutX="150.0" layoutY="400.0" mnemonicParsing="false" onAction="#modifyevent" styleClass="button" text="MODIFY" />
      <Button fx:id="deletButton" layoutX="250.0" layoutY="400.0" mnemonicParsing="false" onAction="#deleteevent" styleClass="button" text="DELETE" />
      <Button fx:id="showLocationButton" layoutX="600.0" layoutY="450.0" mnemonicParsing="false" onAction="#showlocation" styleClass="button" text="SHOW LOCATION" />
   </children>
</AnchorPane>